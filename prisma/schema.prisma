generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String?
  diagnosis String   @default("")
  interest  String   @default("")
  createdAt DateTime @default(now())
  Answer    Answer[]
}

model Quiz {
  id        String     @id @default(uuid())
  type      Int
  questions Question[]
  createdAt DateTime   @default(now())
}

model Answer {
  id           String @id @default(uuid())
  question     Int
  answer       Int
  questionaire Int
  user         User   @relation(fields: userId, references: [id])
  userId       String
}

model Question {
  id        String   @id @default(uuid())
  type      Int
  question  String
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  quizId    String
  createdAt DateTime @default(now())
}
